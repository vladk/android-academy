<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author_name"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/toolbar_title" />

    </android.support.v7.widget.Toolbar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/author_image_width_land"
            android:layout_height="@dimen/author_image_height_land"
            android:src="@drawable/author"
            />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/left_margin"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_height="@dimen/icon_size"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="match_parent"
                    android:src="@drawable/aspnet_logo"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/author_experience_title"
                    android:layout_marginTop="@dimen/default_margin"
                    tools:text="Senior Asp.net developer"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

        <View
            android:layout_marginTop="@dimen/default_margin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boder_size"
                android:background="@color/border_color" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/author_experience"
            android:layout_marginTop="@dimen/default_margin"
            android:textSize="@dimen/text_size" />
            <View
                android:layout_marginTop="@dimen/default_margin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boder_size"
                android:background="@color/border_color" />
        <EditText
            android:id="@+id/message_text"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/message_text_height"
            android:textSize="@dimen/text_size"
            android:hint="@string/enter_message_hint"
            android:inputType="text"/>
        <Button
            android:id="@+id/send_message_btn"
            android:text="@string/send_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_height="@dimen/icon_size"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_instagram"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/instagram"
                    android:layout_marginEnd="@dimen/half_margin"
                    />
                <ImageView
                    android:id="@+id/img_facebook"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/facebook"
                    android:layout_marginStart="@dimen/half_margin"
                    android:layout_marginEnd="@dimen/half_margin"
                    />
                <ImageView
                    android:id="@+id/img_linkedin"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/linkedin"
                    android:layout_marginStart="@dimen/half_margin"
                    />
            </LinearLayout>
        </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>